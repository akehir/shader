{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@triangular/shader": [
        "dist/shader-lib"
      ],
      "@triangular/shader/*": [
        "dist/shader-lib/*"
      ]
    },
    "useDefineForClassFields": false
  }
}
